{
    "name": "oleksandr-mykhasiuk/nginx-service-manager",
    "description": "Nginx Service Manager API for creating and managing virtual hosts",
    "keywords": ["nginx", "service", "api", "manager"],
    "type": "project",
    "license": "MIT",

    "require": {
        "php": "^8.3",
        "laravel/framework": "^12.0",
        "guzzlehttp/guzzle": "^7.8",
        "symfony/process": "^7.0"
    },

    "require-dev": {
        "laravel/pint": "^1.13",
        "phpunit/phpunit": "^10.5"
    },

    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeders",
            "database/factories"
        ]
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "scripts": {
        "post-autoload-dump": [
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },

    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },

    "minimum-stability": "stable",
    "prefer-stable": true
}
